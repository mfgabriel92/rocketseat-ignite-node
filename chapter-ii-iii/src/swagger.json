{
  "openapi": "3.0.0",
  "info": {
    "title": "Rocketseat Ignite Node.js chapter II",
    "version": "1.0.0"
  },
  "paths": {
    "/categories": {
      "get": {
        "tags": ["Category"],
        "summary": "List Categories",
        "description": "Lists all Categories",
        "responses": {
          "200": {
            "description": "Created",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "name": {
                        "type": "string"
                      },
                      "description": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": ["Category"],
        "summary": "Adds Category",
        "description": "Adds a new Category",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "description": {
                    "type": "string"
                  }
                },
                "example": {
                  "name": "Category I",
                  "description": "Lorem ipsum dolor sit amet"
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created"
          },
          "500": {
            "description": "Category with given name already exists"
          }
        }
      }
    }
  }
}